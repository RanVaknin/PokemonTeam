<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="1dp"
        android:background="#FFEBEB">


        <ImageView
            android:id="@+id/pokemonListImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:padding="1dp"
            app:srcCompat="@android:drawable/ic_menu_manage"></ImageView>

        <TextView
            android:id="@+id/pokemonListName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/pokemonListLvl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="-68dp"
            android:text="Name:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pokemonListLvl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="68dp"
            android:text="Level "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pokemonListType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/pokemonListLvl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="165dp"
            android:text="Types:"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>